set tabstop=4 shiftwidth=4 expandtab autoindent smarttab smartindent
set clipboard=unnamedplus
set number
set nocompatible
set hidden
set hlsearch
set incsearch

filetype plugin on

syntax on

noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

set grepprg=rg\ --vimgrep\ --smart-case\ --follow

